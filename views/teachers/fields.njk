<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input type="text" name="name" placeholder="Nome do professor" value="{{ teacher.name }}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ teacher.birth }}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="educational_level">
            <option value="select" {% if teacher.educational_level == "select" %} selected="selected" {% endif %}>Selecione</option>
            <option value="Técnico" {% if teacher.educational_level == "Técnico" %} selected="selected" {% endif %}>Técnico</option>
            <option value="Bacharel" {% if teacher.educational_level == "Bacharel" %} selected="selected" {% endif %}>Bacharel</option>
            <option value="Pós-graduação" {% if teacher.educational_level == "Pós-graduação" %} selected="selected" {% endif %}>Pós-graduação</option>
            <option value="Mestre" {% if teacher.educational_level == "Mestre" %} selected="selected" {% endif %}>Mestre</option>
            <option value="Doutor" {% if teacher.educational_level == "Doutor" %} selected="selected" {% endif %}>Doutor</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span><input type="radio" name="lesson" value="distance" {% if teacher.lesson == "distance" %} checked="checked" {% endif %}>À distância</span>
        <span><input type="radio" name="lesson" value="local" {% if teacher.lesson == "local" %} checked="checked" {% endif %}>Presencial</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="services" placeholder="Separar com vírgula" value="{{ teacher.services }}">
    </div>
</div>
