{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">

        <a href="/students/create">Cadastrar</a>

        <table width="100%">
            <thead>
                <tr>
                    <th>Aluno</th>
                    <th>Instrumento</th>
                    <th>Horas de estudo</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image:url({{ student.avatar_url }})"></span>{{ student.name }}
                        </td>
                        <td>{{ student.instrument }}</td>
                        <td>{{ student.hours }}</td>
                        <td>
                            <a href="/students/{{ student.id }}">Visualizar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock content %}
