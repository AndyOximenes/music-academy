{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            <div class="act-btn">
                <form id="form-post" method="POST" action="/teachers?_method=PUT">

                    <h3>Editar professor</h3>

                    {% include "teachers/fields.njk" %}

                    <input type="hidden" name="id" value="{{ teacher.id }}">
                    <button id="btn-save" type="submit">Salvar</button>

                </form>

                <form id="form-delete" action="/teachers?_method=DELETE" method="post">
                    <input type="hidden" name="id" value="{{ teacher.id }}">
                    <button id="btn-delete" type="submit">Deletar</button>
                </form>

            </div>
        </section>
    </div>

{% endblock content %}
